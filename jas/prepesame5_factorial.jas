.method factorial(n)
    ILOAD n
    IFEQ one
    LDC_W OBJREF
    ILOAD n
    LDC_W OBJREF
    ILOAD n
    BIPUSH 1
    ISUB
    INVOKEVIRTUAL factorial
    INVOKEVIRTUAL multiply
    GOTO exit
one: BIPUSH 1
exit: IRETURN
.end-method

